{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "typings",
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "types": ["node"],
    "target": "ES2015",
    "moduleResolution": "node",
    "stripInternal": true
  }
}
