{
  "compilerOptions": {
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "lib": ["DOM", "ESNext"],
    "types": ["node"],
    "target": "ES2015",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": [
    "./src/**/*",
    "./typings/**/*",
    "./test/**/*",
  ]
}
